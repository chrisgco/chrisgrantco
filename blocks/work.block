<div class="project one-third column {@|item-classes}" data-url="{.passthrough?}{sourceUrl}{.or}{fullUrl}{.end}" data-type="{.repeated section categories}{@}{.end}" data-item-id={id}>

  {.main-image?}
  <div class="thumbnail">
    <img {@|image-meta} />
  </div>
  {.end}

  <div class="info">

    <div class="title">{title}</div>
    <div class="subtitle">{excerpt}</div>

  </div>

</div>
