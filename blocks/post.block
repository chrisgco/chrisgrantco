<div class="post {@|item-classes}" data-url="{.passthrough?}{sourceUrl}{.or}{fullUrl}{.end}" data-item-id="{id}">

  {.main-image?}
  <div class="thumbnail">

    <img {@|image-meta} />

  </div>
  {.end}

  <div class="info">

    <div class="date">{addedOn|date %B %d, %Y}</div>

    <div class="title">{title}</div>

  </div>

</div>
