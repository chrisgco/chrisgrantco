{.section collection}
<div class="container">

  <div class="sixteen columns">

    <ul class="categories">

      <li {.if categoryFilter}{.or}class="active"{.end}><a href="{fullUrl}">All</a></li>
      {.repeated section categories}
      <li {.equal? categoryFilter @}class="active"{.end}><a href="{fullUrl}?category={@}">{@}</a></li>
      {.end}

    </ul>

  </div>

</div>
{.end}
