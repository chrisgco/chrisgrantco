<!-- wrapper -->
<div class="wrapper">

  <!-- header -->
  <header class="header">

    {@|apply header.block}

  </header>
  <!-- header -->

  {.section collection}
  <section class="contact">

    {@|apply cover.block}

    <div class="offset">


      <!-- container -->
      <div class="container">

        <div class="map eight columns" id="map" data-latitude="40.725473" data-longitude="-73.996574" data-zoom="13"></div>

        <div class="content eight columns vertical-center">

          <div class="info">

            <h6 class="title">Contact</h6>

            <a href='mailto:chris@chrisgrant.co' target='_blank'>chris@chrisgrant.co</a>

            <a href='tel:9178542988' target='_blank'>(917) 854-2988</a>

            <a>New York City, NY</a>

          </div>

          <div class="form">

            <h6 class="title">New Project or Question</h6>

            <form method="post">

              <p>
                <input type="text" name="name" id="name" placeholder="Name" />
              </p>
              <p>
                <input type="text" name="company" id="company" placeholder="Company" />
              </p>
              <p>
                <input type="text" name="email" id="email" placeholder="Email" />
              </p>

              <p>
                <label for="message">Message</label>
                <textarea name="message" id="message" cols="45" rows="2"></textarea>
              </p>

              <p>
                <button class="submit">Send</button>
              </p>


            </form>

            <div class="message success">
              <div>Your message has been sent. Thank you!</div>
            </div>

            <div class="message error">
              <div>Sorry your message could not be sent :( Try Again!</div>
            </div>

          </div>

        </div>

      </div>
    </div>

  </section>
  {.end}
  <!-- section -->

  <!-- footer -->
  {@|apply footer.block}
  <!-- footer -->


</div>
<!-- wrapper -->

