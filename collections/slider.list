<!-- wrapper -->
<div class="wrapper">

  <!-- header -->
  <header class="header">

    {@|apply header.block}

  </header>
  <!-- header -->

  <!-- section -->
  <section class="slider fullscreen">

    <div class="inner">

      <div class="slider-wrapper">

        <ul class="slides">
          {.repeated section items}
          <li class="slide" style="background-image: url({assetUrl}?format=1500w);" data-item-id="{id}">

            <div class="overlay transparent">

              <!-- container -->
              <div class="container vertical-center">

                <div class="sixteen columns">

                  <div class="title" data-content-field="title" data-edit-main-image="Background">{title}</div>

                  <div class="subtitle">
                    <span>{customContent.subtitle}</span>
                  </div>

                </div>

              </div>
              <!-- container -->


              <div class="buttons container">

                <div class="sixteen columns">
                  {.if customContent.ctaLink}
                  <div class="discover"><a href="{customContent.ctaLink}">{customContent.ctaText}</a></div>
                  {.end}
                </div>

              </div>

            </div>

          </li>
          {.end}
        </ul>

      </div>

    </div>

  </section>
  <!-- section -->

</div>
