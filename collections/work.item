<!-- wrapper -->
<div class="wrapper fixed-page">

  <!-- header -->
  <header class="header nocover">

    {@|apply header.block}

  </header>
  <!-- header -->

  <!-- section -->
  <section class="project">

    <div class="offset">

      {.section item}
      <div class="info {@|item-classes}" data-item-id="{id}">

        <!-- container -->
        <div class="container">

          <div class="sixteen columns">

            <h4 class="title" data-content-field="title">{title}</h4>

            <h5 class="subtitle" data-content-field="excerpt">{excerpt}</h5>

            <div class="content">
            {body}

            {postItemInjectCode}
            </div>

          </div>

        </div>
        <!-- container -->

      </div>
      {.end}


      <div class="links">

        <!-- container -->
        <div class="container">
          {.section collection}
          <div class="back four columns">

            <a href="{fullUrl}" class="all more">All Projects</a>

          </div>
          {.end}

          {.section item}
          <div class="social eight columns">

            {@|like-button}

            {@|social-button-inline}

          </div>
          {.end}

        </div>
        <!-- container -->

      </div>

    </div>

  </section>
  <!-- section -->


</div>
<!-- wrapper -->
