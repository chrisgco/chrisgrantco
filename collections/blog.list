<!-- wrapper -->
<div class="wrapper">

  <!-- header -->
  <header class="header">

    {@|apply header.block}

  </header>
  <!-- header -->

  <!-- section -->

  <section class="blog">
    {.section collection}
    {@|apply cover.block}
    {.end}

    <div class="offset">
      <!-- Categories -->
      {@|apply categories.block}
      <!-- Categories -->

      <!-- container -->
      <div class="container">

        <div class="col-1 eight columns">
          {.repeated section items} {.odd? @index}
            {@|apply post.block}
          {.end} {.end}

        </div>

        <div class="col-2 eight columns">
          {.repeated section items} {.even? @index}
            {@|apply post.block}
          {.end} {.end}

        </div>
      </div>
      <!-- container -->

    </div>

  </section>
  <!-- section -->

  <!--pagination-->
  {@|apply pagination.block}
  <!--pagination-->

  <!-- footer -->
  {@|apply footer.block}
  <!-- footer -->

</div>
