<div class="wrapper fixed-page">

  <!-- header -->
  <header class="header nocover">

    {@|apply header.block}

  </header>
  <!-- header -->

  <!-- section -->
  <section class="article">

    <div class="offset">

      <!-- container -->
      {.section item}
      <div class="container" data-item-id="{id}">

        <div class="info sixteen columns">

          <div class="title">{title}</div>

          <div class="date">{addedOn|date %B %d, %Y}</div>

          {.main-image?}
          <div class="thumbnail">

            <img {@|image-meta} />

          </div>
          {.end}
        </div>

      </div>
      <!-- container -->

      <!-- container -->
      <div class="container">

        <div class="content sixteen columns">

          {body} {postItemInjectCode}

        </div>

      </div>
      <!-- container -->
      {.end}

      <!-- container -->
      <div class="links container">

        {.section collection}
        <div class="back four columns">

          <a href="{fullUrl}" class="all more">All Articles</a>

        </div>
        {.end}

        {.section item}
        <div class="social eight columns">

          {@|like-button}
          {@|social-button-inline}

        </div>
        {.end}

      </div>
      <!-- container -->
      {.section item}
      <div class="container">
        {@|comments}
      </div>
      {.end}

    </div>

  </section>
